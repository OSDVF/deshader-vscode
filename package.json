{
  "name": "deshader-vscode",
  "displayName": "Deshader",
  "description": "Debug GLSL shaders. Write GLSL code with smart features.",
  "publisher": "osdvf",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0",
    "bun": "^1.0.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "glsl",
    "shader",
    "step",
    "debug",
    "debugger",
    "language server",
    "completion",
    "documentation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OSDVF/deshader-vscode"
  },
  "bugs": {
    "url": "https://github.com/OSDVF/deshader-vscode/issues"
  },
  "preview": true,
  "activationEvents": [
    "onDebug",
    "onFileSystem:deshader",
    "onSearch:deshader",
    "onCommand:deshader.getProgramName"
  ],
  "browser": "./dist/web/extension.js",
  "extensionKind": [
    "ui"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Debugger can be attached to a program running on remote machine if it has Deshader injected. On local machines the extension can inject Deshader to any program."
    }
  },
  "contributes": {
    "breakpoints": [
      {
        "language": "glsl"
      }
    ],
    "debuggers": [
      {
        "type": "deshader",
        "label": "Deshader",
        "languages": [
          "glsl"
        ],
        "configurationAttributes": {
          "launch": {
            "description": "Inject Deshader into a program and launch it",
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to the executable",
                "default": "${workspaceFolder}/${command:AskForProgramName}"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the program",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Absolute path to the working directory of the program or empty to use the current workspace",
                "default": "${workspaceFolder}"
              },
              "env": {
                "type": "object",
                "description": "Environment variables passed to the program",
                "default": {}
              },
              "console": {
                "type": "string",
                "enum": [
                  "debugConsole",
                  "integratedTerminal",
                  "externalTerminal"
                ],
                "enumDescriptions": [
                  "Use the built-in debug console",
                  "Use the built-in integrated terminal (default)",
                  "Use the external terminal (not available in integrated Deshader Editor)"
                ],
                "default": "integratedTerminal",
                "description": "Console used for communication between user and the debugged program"
              },
              "connection": {
                "host": {
                  "type": "string",
                  "description": "Host to run at",
                  "default": "localhost"
                },
                "port": {
                  "type": "number",
                  "description": "Port at which Deshader command listener is listening",
                  "default": 8081
                },
                "protocol": {
                  "type": "string",
                  "enum": [
                    "http",
                    "https",
                    "ws",
                    "wss"
                  ],
                  "enumDescriptions": [
                    "Use HTTP",
                    "Use HTTPS",
                    "Use WebSocket",
                    "Use Secure WebSocket"
                  ],
                  "default": "http",
                  "description": "Protocol used to connect to the command listener"
                }
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after first frame",
                "default": false
              },
              "showDebugOutput": {
                "type": "boolean",
                "description": "Show debug output from the command listener",
                "default": false
              }
            }
          },
          "attach": {
            "description": "Attach to a running program with Deshader already injected",
            "required": [],
            "properties": {
              "connection": {
                "host": {
                  "type": "string",
                  "description": "Host to run at",
                  "default": "localhost"
                },
                "port": {
                  "type": "number",
                  "description": "Port at which Deshader command listener is listening",
                  "default": 8082
                },
                "protocol": {
                  "type": "string",
                  "enum": [
                    "http",
                    "https",
                    "ws",
                    "wss"
                  ],
                  "enumDescriptions": [
                    "Use HTTP",
                    "Use HTTPS",
                    "Use WebSocket",
                    "Use Secure WebSocket"
                  ],
                  "default": "ws",
                  "description": "Protocol used to connect to the command listener"
                }
              },
              "console": {
                "type": "string",
                "enum": [
                  "debugConsole",
                  "integratedTerminal",
                  "externalTerminal"
                ],
                "enumDescriptions": [
                  "Use the built-in debug console",
                  "Use the built-in integrated terminal (default)",
                  "Use the external terminal (not available in integrated Deshader Editor)"
                ],
                "default": "integratedTerminal",
                "description": "Console used for communication between user and the debugged program"
              },
              "showDebugOutput": {
                "type": "boolean",
                "description": "Show debug output from the command listener",
                "default": false
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after first frame",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Deshader Launch",
            "type": "deshader",
            "request": "launch",
            "program": "${workspaceFolder}/${command:AskForProgramName}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showDebugOutput": false
          },
          {
            "name": "Deshader Attach",
            "type": "deshader",
            "request": "attach",
            "connection": {
              "host": "localhost",
              "port": 8082,
              "protocol": "ws"
            },
            "console": "integratedTerminal",
            "showDebugOutput": false,
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "Deshader Launch",
            "description": "Launch a program with Deshader injected",
            "body": {
              "type": "deshader",
              "request": "launch",
              "name": "Deshader Launch",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "args": [],
              "cwd": "${workspaceFolder}",
              "env": {},
              "console": "integratedTerminal",
              "showDebugOutput": false,
              "stopOnEntry": false
            }
          },
          {
            "label": "Deshader Attach",
            "description": "Attach to a running program with Deshader injected",
            "body": {
              "type": "deshader",
              "request": "attach",
              "name": "Deshader Attach",
              "protocol": "http",
              "host": "127.0.0.1",
              "port": 8081,
              "showDebugOutput": false,
              "stopOnEntry": false
            }
          }
        ],
        "variables": {
          "AskForProgramName": "deshader.askForProgramName"
        }
      }
    ],
    "commands": [
      {
        "command": "deshader.newTerminal",
        "title": "Deshader: New Terminal"
      },
      {
        "command": "deshader.connect",
        "title": "Deshader: Connect"
      },
      {
        "command": "deshader.connectLsp",
        "title": "Deshader: Connect/Start GLSL language server"
      },
      {
        "command": "deshader.pauseMode",
        "title": "Deshader: Select thread pause mode"
      },
      {
        "command": "deshader.disconnect",
        "title": "Deshader: Disconnect"
      },
      {
        "command": "deshader.selectThread",
        "title": "Deshader: Select shader thread"
      },
      {
        "command": "dehsader.openWorkspace",
        "title": "Deshader: Open connected workspace"
      }
    ],
    "terminal": {
      "profiles": [
        {
          "id": "deshader.terminal",
          "title": "Deshader Terminal",
          "icon": "debug-console"
        }
      ]
    },
    "icons": {
      "extension-deshader": {
        "description": "Deshader",
        "default": {
          "fontPath": "./icons.woff",
          "fontCharacter": "A"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "bun run compile-dev",
    "vscode:prepublish": "bun run compile-prod",
    "compile-dev": "bun build src/web/extension.ts --outdir dist/web --sourcemap=linked --external vscode --format cjs --target browser --drop=process",
    "compile-prod": "bun build src/web/extension.ts --outdir dist/web --sourcemap=external --external vscode --format cjs --target browser --drop=process --minify --define \"process.env.NODE_DEBUG=undefined\"",
    "dev": "bun run compile-dev --watch",
    "lint": "eslint .",
    "lintfix": "eslint . --fix",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0",
    "await-notify": "^1.0.1",
    "path-browserify": "^1.0.1",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.10.4",
    "@types/path-browserify": "^1.0.3",
    "@types/vscode": "^1.91.1",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vscode/test-web": "^0.0.46",
    "assert": "^2.1.0",
    "eslint": "^9.13.0",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}